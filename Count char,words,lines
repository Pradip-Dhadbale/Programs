#include<stdio.h>
#include<string.h>
int main()
{
    char ch[100];
    int count1=0,count2=0, count3=0,i=0;

    printf("Enter sentence::");
    gets(ch);

    while(ch[i] != '\0')
    {
        count1++;

        if(ch[i] == '\n')
            count3++;

        if (ch[i] == ' ' || ch[i] == '\t')
            count2++;
        i++;
    }

    printf("\ncharacters= %d",count1);
    printf("\nwords= %d",count2+1);
    printf("\nlines= %d",count3+1);

    return 0;
}
